{
  "compilerOptions": {
    "skipLibCheck": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "sourceMap": true,
    "importHelpers": true,
    "incremental": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "es2019",
      "dom",
      "scripthost",
      "esnext.asynciterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src/**/*",
    "./jest-setup.ts",
    "./webpack.config.ts"
  ]
}
